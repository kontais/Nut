OUTPUT_FORMAT(binary)
ENTRY(_start)
SECTIONS
{
	.text : { *(.text) }
	.rodata : { *(.rodata) }
	.data : { *(.data) }
	.bss : { *(.bss) }
	
	text_start = LOADADDR(.text);
	text_end = LOADADDR(.text) + SIZEOF(.text);
	data_start = LOADADDR(.rodata);
	data_end = LOADADDR(.rodata) + SIZEOF(.rodata) + SIZEOF(.data);
	bss_start = LOADADDR(.bss);
	bss_end = LOADADDR(.bss) + SIZEOF(.bss);
}
